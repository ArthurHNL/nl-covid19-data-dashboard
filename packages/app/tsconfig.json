{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es2018",
    "module": "esnext",
    "allowJs": false,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "include": ["next-env.d.ts", "src"],
  "exclude": ["node_modules"],
  // Most ts-node options can be specified here using their programmatic names.
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
