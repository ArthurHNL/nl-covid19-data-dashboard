{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "es2018",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  }
}
